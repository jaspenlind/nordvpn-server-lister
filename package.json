{
  "name": "nordvpn-server-lister",
  "version": "0.0.1-alpha.0",
  "description": "A tool for listing NordVPN servers",
  "main": "dist/src/bin/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src/*"
  ],
  "bin": {
    "vpn-servers": "dist/src/bin/vpn-servers.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf coverage dist",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "debug": "node --nolazy --inspect-brk=9229 node_modules/jest/bin/jest.js -i",
    "format": "prettier --ignore-path .eslintignore --write \"**/*.{js,ts,jsx,tsx}\" -c",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "postversion": "git push && git push --tags && npm run clean",
    "prepare": "npm run build",
    "prepublishOnly": "npm-run-all test lint",
    "release:alpha": "npm version prerelease --preid alpha -m \" build: :bookmark:%s\"",
    "test": "jest --coverage -t",
    "test:watch": "jest --watch-all -t",
    "version": "git add -A src"
  },
  "keywords": [
    "vpn",
    "cli",
    "tools"
  ],
  "author": "jaspenlind",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/jaspenlind/nordvpn-server-lister"
  },
  "dependencies": {
    "@types/lodash.escaperegexp": "^4.1.6",
    "lodash.escaperegexp": "^4.1.2",
    "option-parser": "https://github.com/jaspenlind/option-parser/releases/download/v0.0.1-alpha.4/option-parser-0.0.1-alpha.4.tgz",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.18",
    "@types/request-promise": "^4.1.44",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "commitlint": "^8.2.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "expect": "^24.9.0",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "jest-matcher-utils": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  }
}
